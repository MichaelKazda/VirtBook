<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/carCheckHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_thin"
            android:text="@string/carCheckHeadline"
            android:textColor="#000000"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.223"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/errorsCountHeadline"
            android:layout_width="107dp"
            android:layout_height="17dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_thin"
            android:text="@string/errorsCountHeadline"
            android:textColor="#5E5E5E"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carCheckHeadline" />

        <TextView
            android:id="@+id/errorsCount"
            android:layout_width="108dp"
            android:layout_height="32dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/poppins"
            android:text="5"
            android:textColor="#232323"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/errorsCountHeadline" />

        <TextView
            android:id="@+id/fixPriceHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/poppins_thin"
            android:text="@string/fixPriceHeadline"
            android:textColor="#5E5E5E"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carCheckHeadline" />

        <TextView
            android:id="@+id/fixPrice"
            android:layout_width="127dp"
            android:layout_height="34dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/poppins"
            android:text="20144"
            android:textColor="#232323"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fixPriceHeadline" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/checkContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fixPrice"
            app:layout_constraintVertical_bias="1.0"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E81818">

                <TextView
                    android:id="@+id/log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/poppins_thin"
                    android:text="Log test"
                    android:textColor="#4CAF50"
                    android:textSize="13sp" />
            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E81818">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/poppins_thin"
                    android:text="Log test"
                    android:textColor="#4CAF50"
                    android:textSize="13sp" />
            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E81818">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="40dp"
                    android:fontFamily="@font/poppins_thin"
                    android:text="Log test"
                    android:textColor="#4CAF50"
                    android:textSize="13sp" />
            </androidx.recyclerview.widget.RecyclerView>


        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>